<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Title Screen" Height="350" Width="500">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Your App" FontSize="20" Margin="0,0,0,20"/>
            
            <Button Content="Create New File" Click="CreateNewFile_Click" Margin="0,0,0,10"/>
            <Button Content="Load Existing File" Click="LoadExistingFile_Click"/>
        </StackPanel>
    </Grid>
</Window>
